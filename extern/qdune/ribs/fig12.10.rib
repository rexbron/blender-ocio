#########################################################################
# fig12.10.rib - RIB to create Figure 12.10 of:
#
# _Advanced RenderMan: Creating CGI for Motion Picture_, 
# by Anthony A. Apodaca and Larry Gritz, Morgan Kaufmann, 1999.
#
# This file demostrates the oak shader.
# The lights in this file assume ray tracing -- either BMRT or 
# frankenrender will work, but plain PRMan will not have shadows unless
# you make your own shadow map and modify the file to use it.  Sorry.
#########################################################################

##RenderMan RIB-Structure 1.0
version 3.03

#------------------------------------------------------------
# shadowmap

Hider "hidden" "jitter" [0]
FrameBegin 1
Display "fig12.10.sm" "zfile" "z"
Format 512 512 1
PixelFilter "box" 1 1
PixelSamples 1 1
#ScreenWindow -2.75 2.75 -2.75 2.75
Projection "perspective" "fov" [1.15]

Rotate -29.12 1.00 0.00 0.00
Rotate 158.20 0.00 1.00 0.00
Translate -80.00 -120.00 -200.00

WorldBegin

AttributeBegin
Translate 1 1 0
Scale .1 .1 .1
Rotate -100 0 0 1
ReadArchive "gumbo.rib"
AttributeEnd

AttributeBegin
Translate -2.4 2 0
Scale .1 .1 .1
Rotate -50 0 0 1
ReadArchive "gumbo.rib"
AttributeEnd

WorldEnd

FrameEnd

#------------------------------------------------------------
# image

Hider "hidden" "jitter" [1]
FrameBegin 2

Format 640 480 1
#Format 1024 768 1
PixelSamples 4 4
Display "fig12.10" "framebuffer" "rgb"
#Display "fig12.10.tga" "file" "rgb"

Exposure 1 1.5

Projection "perspective"  "fov" [11]
ShadingRate 1
#Option "searchpath" "shader" [".:../shaders:&"]

##CameraOrientation 2 20 5 0 0 0 -0.0240204 -0.240204 0.970425
ConcatTransform [0.995037 -0.0240204 -0.0965609 0 -0.0995037 -0.240204 -0.965609 0 3.56147e-10 0.970425 -0.241402 0 0 0 0 1]
Translate -2 -20 -5

WorldBegin
Translate 0 0 -0.5

TransformBegin
# Ambient light
LightSource "ambientlight" 1 "intensity" [0.01]
Illuminate 1 1

# Key light
AttributeBegin
Translate 80 120 200
# Declare "nsamples" "integer"
# Attribute "light" "nsamples" [16]

AreaLightSource "uberlight" 2 "string lighttype" ["omni"] 
            "intensity" [2] "lightcolor" [1 .95 .85]
            "float falloff" [0] 
            #"float raytraceshadow" [1]
            "string shadowmap" ["fig12.10.sm"]
            "color shadowcolor" [.1 .12 .17]
            "float shadownsamps" [16] "float shadowbias" [0.7] "float shadowblur" [5]

# Surface "constant"
# Attribute "render" "casts_shadows" ["none"]
# Disk 0 30 -360
AttributeEnd

Illuminate 2 1

# Fill light
AttributeBegin
Translate -50 50 80
Declare "lighttype" "string"
LightSource "uberlight" 3 "lighttype" ["omni"] "intensity" [0.1] 
            "float nonspecular" [1] "lightcolor" [.9 .9 1]
AttributeEnd
Illuminate 3 1

# Bounce light
AttributeBegin
Translate 0 20 -100
LightSource "uberlight" 5 "string lighttype" ["omni"] "intensity" [0.05]
          "float nonspecular" [1]
AttributeEnd
Illuminate 5 1

TransformEnd


AttributeBegin
TransformBegin
Scale .5 .5 .5
Surface "oak" "float divotdepth" [0.01]
TransformEnd
Translate 1 1 0
Scale .1 .1 .1
Rotate -100 0 0 1
ReadArchive "gumbo.rib"
AttributeEnd

AttributeBegin
TransformBegin
Scale .75 .75 .75
Surface "oak" "float divotdepth" [0] "float roughness" [0.075] "float Ks" [1.4] "float Kd" [0.3] "float grainy" [0.5] "color Cdarkwood" [0.07 0.04 0.014]
TransformEnd
Translate -2.4 2 0
Scale .1 .1 .1
Rotate -50 0 0 1
ReadArchive "gumbo.rib"
AttributeEnd

AttributeBegin
#Attribute "render" "casts_shadows" ["none"]
Surface "constant"
Color [.75 .75 .75 ]
Sphere 1000 -1000 1000 -360
AttributeEnd

AttributeBegin
#Attribute "identifier" "name" ["box"]
#Attribute "render" "casts_shadows" ["none"]
Translate 0 0 -0.4
Rotate 20 0 0 1
TransformBegin
Rotate 85 0 1 0
Translate 2 0 0
Scale .75 .75 .75
Surface "oak" "float divotdepth" [0.0075] "color Clightwood" [0.5300 0.2439 0.1171] "color Cdarkwood" [0.4431 0.1729 0.0531]
TransformEnd
Scale 2.5 2.5 0.2
Patch "bilinear" "P" [ -1 1 0  1 1 0  -1 -1 0  1 -1 0 ]
Patch "bilinear" "P" [ -1 -1 2  1 -1 2  -1 1 2  1 1 2]
Patch "bilinear" "P" [ -1 -1 0  1 -1 0   -1 -1 2  1 -1 2]
Patch "bilinear" "P" [ -1 1 2  1 1 2  -1 1 0  1 1 0 ]
Patch "bilinear" "P" [ -1 -1 2  -1 1 2  -1 -1 0  -1 1 0 ]
Patch "bilinear" "P" [ 1 -1 0  1 1 0  1 -1 2  1 1 2]
AttributeEnd

WorldEnd

FrameEnd
