#Option "searchpath" "string shader" ".:%PIXIEHOME%/shaders:%SHADERS%"
Hider "hidden" "jitter" [1]
Display "mblurtest" "framebuffer" "rgb"
#Display "mblurtest.tga" "file" "rgb"
Format 512 256 1
Shutter 0 1
#PixelFilter "box" 1 1
PixelSamples 8 8
Translate 0 0 5
# camera blur
# MotionBegin [0 1]
# 	Translate 0 0 0
# 	Translate 1 0 0
# MotionEnd
ShadingRate 100
GeometricApproximation "motionfactor" 0
WorldBegin
	Surface "constant"
	MotionBegin [0 1]
		Translate -1 0 0
		Translate 1 0 0
	MotionEnd
	Sphere 1 -1 1 360
# 	MotionBegin [0 1]
# 		Sphere 1 -1 1 360
# 		Sphere 0.25 -0.25 0.25 360
# 	MotionEnd
WorldEnd
