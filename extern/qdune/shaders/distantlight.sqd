light distantlight
param uniform float intensity 1
param uniform color lightcolor 1 1 1
param uniform point from 0 0 0
param uniform point to 0 0 1
temp vector $1
const float $2 0
const string $3 "shader"
global Cl
codesegment @1
	ptocurr		from $3 from
	ptocurr		to $3 to
@1
	subvvv		$1 to from
	solar2		$1 $2
	mulvvf		Cl lightcolor intensity
	end_solar
	return
