# QDSLC version 0.0.1-alpha
displacement stucco
param uniform float frequency 10
param uniform float power 5
param uniform float Km 0.05
temp varying point PP
temp varying float magnitude
temp varying float $1
temp varying vector $2
const string $3 "shader"
global P N
codesegment
	ptransform1      PP $3 P
	mulvvf           $2 PP frequency
	noise3f          $1 $2
	pow              $1 $1 power
	mulfff           magnitude Km $1
	normalize        $2 N
	maddvvf          P $2 magnitude
	calcnormal       N P
	return
